<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/frameLayout"
  android:layout_width="match_parent"
  android:layout_height="75dp">

  <TextView
    android:id="@+id/coin_name_wl"
    android:layout_width="91dp"
    android:layout_height="35dp"
    android:layout_marginStart="72dp"
    android:singleLine="true"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.275" />

  <TextView
    android:id="@+id/coin_symbol_wl"
    android:layout_width="wrap_content"
    android:layout_height="19dp"
    android:layout_marginStart="88dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/coin_name_wl"
    app:layout_constraintVertical_bias="1.0" />

  <TextView
    android:id="@+id/coin_price_wl"
    android:layout_width="73dp"
    android:layout_height="24dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="28dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <!--   width/height in multipiles of 4-->

  <TextView
    android:id="@+id/coin_change_wl"
    android:layout_width="53dp"
    android:layout_height="17dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="44dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/coin_price_wl" />

  <ImageView
    android:id="@+id/coin_logo_wl"
    android:layout_width="53dp"
    android:layout_height="67dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/coin_name_wl"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_action_name" />

  <ImageView
    android:id="@+id/removeFromWatchList"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scaleX="0.70"
    android:scaleY="0.70"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.989"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.568"
    app:srcCompat="@drawable/delete" />

  <ImageView
    android:id="@+id/changeSymbol_wl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/coin_change_wl"
    app:layout_constraintHorizontal_bias="0.98"
    app:layout_constraintStart_toEndOf="@+id/coin_symbol_wl"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0"
    app:srcCompat="@drawable/trending_up" />

  <TextView
    android:id="@+id/textView10"
    android:layout_width="11dp"
    android:layout_height="25dp"
    android:text="$"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/coin_price_wl"
    app:layout_constraintHorizontal_bias="0.919"
    app:layout_constraintStart_toEndOf="@+id/coin_name_wl"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.08" />

</androidx.constraintlayout.widget.ConstraintLayout>